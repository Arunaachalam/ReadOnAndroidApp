<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.readon">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/readon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/readon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Basiccpp"
            android:label="Introduction to C++"></activity>
        <activity
            android:name=".ProgramingActivity"
            android:label="Computer Programming" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>